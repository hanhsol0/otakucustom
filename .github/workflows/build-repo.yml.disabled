name: Build Kodi Repository

on:
  push:
    branches: [main]
    paths:
      - 'plugin.video.otaku.testing/**'
      - 'context.otaku.testing/**'
      - 'repository.otakucustom/**'

# Only allow one build at a time, queue others
concurrency:
  group: build-repo
  cancel-in-progress: false

# Required for pushing commits back to repo
permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    # Skip if commit is from the bot (prevents infinite loop)
    if: "!contains(github.event.head_commit.message, 'Auto-build')"

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Full history for rebasing
          token: ${{ github.token }}

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Get version
        run: |
          # Extract current version (already bumped by pre-commit hook)
          VERSION=$(grep -oP 'id="plugin.video.otaku.testing".*?version="\K[0-9]+\.[0-9]+\.[0-9]+' plugin.video.otaku.testing/addon.xml)
          echo "Version: $VERSION"
          echo "NEW_VERSION=$VERSION" >> $GITHUB_ENV

      - name: Build repository
        run: python build_repo.py

      - name: Commit and push
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add -A
          git commit -m "Auto-build v${{ env.NEW_VERSION }}"

          # Retry push with rebase if it fails (handles concurrent pushes)
          for i in 1 2 3; do
            git pull --rebase origin main && git push && break
            echo "Push failed, retrying in 5s... (attempt $i/3)"
            sleep 5
          done
